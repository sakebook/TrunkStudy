<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/mediam_margin"
                android:paddingRight="@dimen/mediam_margin"
                xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/list_image"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/small_margin"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:background="#eeeeee"
        android:scaleType="centerCrop"
        tools:src="@mipmap/ic_launcher"/>

    <LinearLayout
        android:id="@+id/layout_texts"
        android:layout_toRightOf="@+id/list_image"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:paddingTop="@dimen/small_margin"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/list_title_text"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:background="@color/teal_green"
            android:textColor="@color/white"
            android:maxLines="3"
            android:padding="@dimen/small_margin"
            android:ellipsize="end"
            android:textSize="16sp"
            tools:text="タイトルです"/>

        <TextView
            android:id="@+id/list_tag_text"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:gravity="bottom|right"
            android:paddingRight="@dimen/small_margin"
            android:paddingBottom="@dimen/small_margin"
            android:background="@color/teal_green"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:text="Android"
            tools:text="タグです"/>



    </LinearLayout>

    <View
        android:id="@+id/line_view1"
        android:layout_below="@+id/list_image"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"/>
    <View
        android:id="@+id/line_view2"
        android:layout_below="@+id/line_view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray"/>
    <View
        android:id="@+id/line_view3"
        android:layout_below="@+id/line_view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/ultra_light_gray"/>


</RelativeLayout>